{
  "name": "@future-widget-lab/react-context-provider",
  "version": "0.1.0",
  "license": "MIT",
  "author": "Carlos Lobo",
  "main": "dist/index.js",
  "module": "dist/react-context-provider.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git+github.com/future-widget-lab/react-context-provider.git"
  },
  "scripts": {
    "analyze": "size-limit --why",
    "build": "dts build",
    "lint": "dts lint",
    "prepare": "dts build",
    "size": "size-limit",
    "start": "dts watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "dts lint"
    }
  },
  "prettier": {
    "singleAttributePerLine": true,
    "bracketSpacing": true,
    "useTabs": true,
    "singleQuote": true,
    "semi": true,
    "printWidth": 120,
    "tabWidth": 2,
    "importOrder": [
      "<THIRD_PARTY_MODULES>",
      "^[./]"
    ],
    "importOrderSeparation": false,
    "importOrderSortSpecifiers": true,
    "importOrderCaseInsensitive": true,
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ],
    "pluginSearchDirs": false,
    "trailingComma": "none"
  },
  "jest": {
    "testEnvironment": "jsdom"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "engines": {
    "node": ">=12"
  },
  "size-limit": [
    {
      "path": "dist/react-context-provider.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/react-context-provider.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.1.6",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@tsconfig/recommended": "^1.0.8",
    "@tsconfig/vite-react": "^3.4.0",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.3.1",
    "dts-cli": "^2.0.5",
    "husky": "^9.1.7",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "size-limit": "^11.1.6",
    "tslib": "^2.8.1",
    "typescript": "^5.7.3"
  },
  "keywords": [
    "react",
    "context",
    "provider",
    "state-management",
    "useContext",
    "context-api",
    "hooks",
    "typescript",
    "react-hooks",
    "custom-hook",
    "state",
    "context-provider",
    "fluent-api",
    "create-context"
  ]
}